{
  // prettier + eslint config
  "editor.formatOnSave": true,
  "[javascript]": {
    "editor.formatOnSave": false
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "eslint.alwaysShowStatus": true,
  "prettier.disableLanguages": [
    "js",
    "jsx",
    "ts",
    "tsx"
  ],

  "editor.tabSize": 2, 
  "editor.cursorStyle": "line", // line, underline, block
  // "editor.detectIndentation": true,
  // "editor.insertSpaces": false,
  //"javascript.suggest.enabled": false,
  //"typescript.suggest.enabled": false,
  "javascript.suggest.includeAutomaticOptionalChainCompletions": false,
  "typescript.suggest.includeAutomaticOptionalChainCompletions": false,
  "javascript.format.insertSpaceAfterSemicolonInForStatements": false,
  "typescript.format.insertSpaceAfterSemicolonInForStatements": false,
  "editor.suggest.filterGraceful": false,
  "editor.wordBasedSuggestions": false,
  "editor.quickSuggestions": {
    "other": false,
    "comments": false,
    "strings": false
  },
  "editor.parameterHints.enabled": false,
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "html.suggest.html5": false,
  "editor.snippetSuggestions": "none",
  "editor.lightbulb.enabled": false,
  "git.decorations.enabled": false,
  "scm.diffDecorations": "none",
  "editor.renderLineHighlight": "none",
  "workbench.sideBar.location": "left",
  "workbench.activityBar.visible": false,
  "workbench.colorTheme": "Monokai",
  "workbench.colorCustomizations": {
    "editor.background": "#202020",
    "sideBar.background": "#202020",
    "sideBarSectionHeader.background": "#202020",
    "titleBar.activeBackground": "#202020",
    "statusBar.background": "#202020"
  },
  "editor.tokenColorCustomizations": {
    //"functions": "#fcfc63",
    //"keywords": "#ff3a3a",
    //"types": "#6fd5fd",
    "textMateRules": [
      {
        "name": "js/ts support.class.component",
        "scope": "support.class.component",
        "settings": {
          "foreground": "#e01818" //#e01818
        }
      }
    ]
  },
  "remote.extensionKind": {
    "pub.name": [
      "ui"
    ]
  },
  "emmet.extensionsPath": "",
  "window.zoomLevel": 0,
  "files.autoSave": "off",
  "diffEditor.ignoreTrimWhitespace": false,
  "workbench.startupEditor": "newUntitledFile"
}